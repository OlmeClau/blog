<h1>Report View</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Created Date</th>
      <th>Updated Date</th>
      <th>category</th>
      <th>Number Of Comments</th>
      <th>Number Of Likes</th>
      <th>Number Of Words</th>
      
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.created_at.to_date %></td>
        <td><%= post.updated_at.to_date %></td>
        <td><%= post.category %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.like %></td>
        <td><%= post.text.split(" ").count + post.title.split(" ").count%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', posts_path,:class => "btn btn-primary" %>